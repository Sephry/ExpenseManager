<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    android:layout_margin="10dp"
    android:elevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFE2EFF1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TÃ¼r:"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:id="@+id/type_Income_ds"
            android:textAppearance="?android:textAppearanceLarge"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="Miktar:"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:id="@+id/amount_Income_ds"/>

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="14 Mar 2020"
            android:maxLines="1"
            android:ellipsize="end"
            android:padding="5dp"
            android:id="@+id/date_Income_ds"
        android:textAppearance="?android:textAppearanceMedium" android:gravity="center"
            android:textColor="@color/black"
        android:layout_marginTop="10dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>