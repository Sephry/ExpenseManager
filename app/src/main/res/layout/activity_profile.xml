<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Profile">

    <include
        android:id="@+id/about_toolbar"
        layout="@layout/profile_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="552dp"
                android:layout_height="287dp"
                android:layout_marginTop="-10dp"
                android:src="@drawable/muhasebelogo" />

            <Space
                android:layout_width="0dp"
                android:layout_height="50dp"/>

            <TextView
                    android:id="@+id/email_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:hint="Kullanıcı Emaili"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="-20dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColorHint="@android:color/black"
                    android:textColor="@android:color/black"
                    />


            <Button
                android:id="@+id/btn_deleteaccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/yellow"
                android:text="Hesabı Sil"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                app:backgroundTint="@color/babyblue" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>